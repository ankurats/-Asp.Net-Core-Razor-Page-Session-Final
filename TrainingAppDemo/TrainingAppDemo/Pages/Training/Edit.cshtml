@page  "{trainingId:int?}"
@model TrainingAppDemo.Pages.Training.EditModel
@{
    ViewData["Title"] = "Edit";
}

@if (Model.training.Id > 0)
{
    <h2>Edit : @Model.training.Title</h2>
}
else
{
    <h2>Add new Training : </h2>
}

<form method="post">
    <input type="hidden" asp-for="training.Id" />

    <div class="form-group">
        <label asp-for="training.Title"></label>
        <input type="text" class="form-control" asp-for="training.Title" />
        <span class="text-danger" asp-validation-for="training.Title"></span>
    </div>

    <div class="form-group">
        <label asp-for="training.Trainer"></label>
        <input type="text" class="form-control" asp-for="training.Trainer" />
        <span class="text-danger" asp-validation-for="training.Trainer"></span>
    </div>

    <div class="form-group">
        <label asp-for="training.Level"></label>
        <select class="form-control" asp-for="training.Level" asp-items="Model.TrainingLevel">
            <option></option>
        </select>
        <span class="text-danger" asp-validation-for="training.Level"></span>

    </div>


    <button type="submit" class="btn btn-primary"></button>
</form>


